<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button" >
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="EditText.Validation" parent="EditText">
        <item name="autoValidate">true</item>
        <item name="showErrorMessage">true</item>
    </style>

    <!-- Inputs styles -->
    <style name="EditText">
        <item name="android:padding">@dimen/dimen_padding_large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>
</resources>
